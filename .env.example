# LIMINAL Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to git!

# ======================================================================
# CRITICAL SECURITY SETTINGS - REQUIRED IN PRODUCTION
# ======================================================================

# JWT Secret Key - Use a strong random string (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS

# Neo4j Database Password - Use a strong password
NEO4J_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# ======================================================================
# APPLICATION SETTINGS
# ======================================================================

# Environment: development | staging | production
ENV=development

# Server Configuration
HOST=0.0.0.0
PORT=8000

# ======================================================================
# DATABASE SETTINGS
# ======================================================================

# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379
USE_REDIS=false

# ======================================================================
# ML & AI SETTINGS
# ======================================================================

# Enable ML features
ML_ENABLED=true

# OpenAI API Key (optional, for AI features)
OPENAI_API_KEY=

# ======================================================================
# MONITORING & METRICS
# ======================================================================

# Enable Prometheus metrics
PROMETHEUS_ENABLED=true

# ======================================================================
# DEVELOPMENT SETTINGS (ignore in production)
# ======================================================================

# Debug mode (automatically false in production)
DEBUG=true
