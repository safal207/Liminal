# =============================================================================
# Resonance Liminal Environment Configuration
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/resonance_liminal
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# WebSocket Configuration
WEBSOCKET_MAX_CONNECTIONS=1000
WEBSOCKET_MAX_CONNECTIONS_PER_IP=10
RATE_LIMIT_MESSAGES_PER_SECOND=10
RATE_LIMIT_BURST=20

# =============================================================================
# AI & ML Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.3

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4000
CLAUDE_TEMPERATURE=0.1

# XAI Configuration
XAI_CACHE_SIZE=1000
XAI_ENABLE_SHAP=true
XAI_ENABLE_LIME=true

# Multi-LLM Configuration
MULTI_LLM_FALLBACK_ENABLED=true
MULTI_LLM_CONSENSUS_THRESHOLD=0.7
MULTI_LLM_COST_OPTIMIZATION=true

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Prometheus Configuration
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana Configuration
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# Development & Testing
# =============================================================================

# Environment
ENVIRONMENT=development
DEBUG=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/resonance_liminal_test
ARTILLERY_TARGET_URL=http://localhost:8000

# =============================================================================
# Security Configuration
# =============================================================================

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting
GLOBAL_RATE_LIMIT=1000
API_RATE_LIMIT=100

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# Docker & Infrastructure
# =============================================================================

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=resonance-liminal
COMPOSE_FILE=docker-compose.ml-production.yml

# Volume Paths
ML_MODELS_PATH=./ml/models
ML_DATA_PATH=./ml/data
LOGS_PATH=./logs

# Network Configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000
XAI_SERVICE_PORT=8001
